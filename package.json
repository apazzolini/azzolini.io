{
  "name": "andreazzolini.com",
  "description": "The platform behind andreazzolini.com",
  "author": "Andre Azzolini <apazzolini@gmail.com> (http://github.com/apazzolini)",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/apazzolini/andreazzolini.com"
  },
  "homepage": "https://github.com/apazzolini/andreazzolini.com",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "hapi",
    "hot reloading",
    "react-hot-reloader",
    "redux",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "node ./node_modules/better-npm-run start",
    "build": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
    "lint": "./node_modules/eslint/bin/eslint.js -c .eslintrc src",
    "start-dev": "node ./node_modules/better-npm-run start-dev",
    "watch-client": "node ./node_modules/better-npm-run watch-client",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "test": "node ./node_modules/better-npm-run test"
  },
  "betterScripts": {
    "start": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-dev": {
      "command": "nodemon --watch src --watch config -e js,json ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "test": {
      "command": "mocha --colors --compilers js:babel/register --require ./test/helper.js --recursive ./src/**/*.test.js",
      "env": {
        "MONGO_DB": "andreazzolini_test",
        "NODE_ENV": "development",
        "PORT": 4000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src"
      }
    }
  },
  "dependencies": {
    "babel": "^5.8.23",
    "babel-plugin-typecheck": "1.2.0",
    "boom": "^2.8.0",
    "brace": "^0.5.1",
    "config": "^1.16.0",
    "hapi": "^10.0.0",
    "hapi-auth-cookie": "^3.1.0",
    "highlight.js": "^8.8.0",
    "immutable": "^3.7.5",
    "inert": "^3.0.1",
    "isomorphic-fetch": "^2.1.1",
    "joi": "^6.7.0",
    "js-yaml": "^3.4.2",
    "json5": "^0.4.0",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "pretty-error": "^1.2.0",
    "promised-mongo": "^1.2.0",
    "query-string": "^2.4.1",
    "react": "0.13.3",
    "react-ace": "^2.5.0",
    "react-document-meta": "^1.0.1",
    "react-redux": "^2.1.2",
    "react-router": "1.0.0-beta3",
    "redux": "^2.0.0",
    "redux-immutablejs": "0.0.6",
    "redux-thunk": "^0.1.0",
    "serialize-javascript": "^1.1.2",
    "webpack-isomorphic-tools": "^0.8.8"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^5.8.24",
    "babel-eslint": "^4.1.2",
    "babel-loader": "5.3.2",
    "babel-runtime": "^5.8.24",
    "better-npm-run": "0.0.2",
    "chai": "^3.3.0",
    "chai-immutable": "^1.3.0",
    "clean-webpack-plugin": "^0.1.3",
    "concurrently": "0.1.1",
    "css-loader": "^0.18.0",
    "eslint": "^1.7.0",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-react": "^3.6.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "json-loader": "0.5.2",
    "mocha": "^2.3.3",
    "postcss-loader": "^0.6.0",
    "precss": "^1.2.3",
    "react-hot-loader": "1.3.0",
    "redux-devtools": "^2.1.2",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.1",
    "webpack-dev-server": "^1.11.0"
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
