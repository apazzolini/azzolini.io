---
import { SEO } from 'astro-seo';
import '../index.css';

export interface Props {
  title: string;
  metaDesc?: string;
}

const title = `${Astro.props.title} | Andre Azzolini`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO title={title} description={Astro.props.metaDesc ?? Astro.props.title} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;900&display=swap"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="mx-4 mt-4 md:ml-24 md:mt-24">
      <nav class="mb-16">
        <a href="/" class="no-underline text-zinc-300 tracking-widest font-mono text-xs font-medium">
          Andre Azzolini
        </a>
      </nav>
      <slot />
    </div>
  </body>
</html>
